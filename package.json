{
  "private": true,
  "scripts": {
    "build:css": "tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/main.css --minify --postcss",
    "watch:css": "tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/main.css --watch --postcss",
    "dev": "concurrently -k -n JEKYLL,TAILWIND \"bundle exec jekyll serve --livereload\" \"npm:watch:css\"",
    "build": "npm run build:css && bundle exec jekyll build"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "postcss": "^8.4.47",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.2.0",
    "tailwindcss": "^3.4.17"
  }
}

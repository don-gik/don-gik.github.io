{
  "private": true,
  "scripts": {
    "build:css": "tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/main.css --minify --postcss",
    "watch:css": "tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/main.css --watch --postcss",
    "dev": "concurrently -k -n JEKYLL,TAILWIND,REACT \"bundle exec jekyll serve --livereload\" \"npm:watch:css\" \"vite build --watch\"",
    "build:react": "vite build",
    "build": "npm run build:css && npm run build:react && bundle exec jekyll build"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "postcss": "^8.4.47",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.2.0",
    "tailwindcss": "^3.4.17",
    "@vitejs/plugin-react": "^4.3.3",
    "vite": "^5.4.10"
  },
  "dependencies": {
    "@react-three/fiber": "^8.17.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "^0.160.0"
  }
}
